{
  "name": "@morpho-labs/morpho-subgraphs",
  "description": "Morpho Subgraphs for The Graph Protocol",
  "license": "MIT",
  "author": "Morpho Labs",
  "contributors": [
    {
      "name": "Julien Devatom",
      "email": "julien@morpho.xyz",
      "url": "https://github.com/julien-devatom"
    }
  ],

  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-association/morpho-subgraphs.git"
  },
  "bugs": {
    "url": "https://github.com/morpho-association/morpho-subgraphs/issues"
  },
  "homepage": "https://github.com/morpho-association/morpho-subgraphs#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "graph:codegen": "graph codegen",
    "graph:build": "graph build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ morpho-labs/morpho-subgraphs",
    "create-local": "graph create --node http://localhost:8020/ morpho-labs/morpho-subgraphs",
    "remove-local": "graph remove --node http://localhost:8020/ morpho-labs/morpho-subgraphs",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 morpho-labs/morpho-subgraphs",
    "test": "graph test",
    "postinstall": "husky install",
    "lint": "eslint ./src --fix"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.43.0",
    "@graphprotocol/graph-ts": "^0.29.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "matchstick-as": "^0.5.2",
    "prettier": "^2.8.6"
  },
  "config": {
  "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ]
    ]
  }
}
