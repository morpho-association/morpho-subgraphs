{
  "name": "@morpho-association/morpho-subgraphs",
  "description": "Morpho Subgraphs for The Graph Protocol",
  "license": "MIT",
  "author": "Morpho Association",
  "contributors": [
    {
      "name": "Julien Devatom",
      "email": "julien@morpho.xyz",
      "url": "https://github.com/julien-devatom"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-association/morpho-subgraphs.git"
  },
  "bugs": {
    "url": "https://github.com/morpho-association/morpho-subgraphs/issues"
  },
  "homepage": "https://github.com/morpho-association/morpho-subgraphs#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "codegen": "yarn codegen:morpho && yarn codegen:dao",
    "build": "yarn build:morpho && yarn build:dao",
    "codegen:morpho": "graph codegen config/morpho-v1/subgraph.yaml -o generated/morpho-v1/",
    "codegen:dao": "graph codegen config/dao/subgraph.yaml -o generated/dao/",
    "build:morpho": "graph build config/morpho-v1/subgraph.yaml -o build/morpho-v1/",
    "build:dao": "graph build config/dao/subgraph.yaml -o build/dao/",
    "deploy:morpho": "graph deploy -o build/morpho-v1/",
    "deploy:dao": "graph deploy -o build/dao/",
    "deploy:morpho:hs": "yarn deploy:morpho --product hosted-service morpho-association/morpho-subgraphs config/morpho-v1/subgraph.yaml",
    "deploy:dao:hs": "yarn deploy:dao --product hosted-service morpho-association/morpho-dao config/dao/subgraph.yaml",
    "deploy:morpho:studio": "yarn deploy:morpho --node https://api.studio.thegraph.com/deploy/ morpho-association/morpho-subgraphs config/morpho-v1/subgraph.yaml",
    "deploy:dao:studio": "yarn deploy:dao --node https://api.studio.thegraph.com/deploy/ morpho-association/morpho-dao config/dao/subgraph.yaml",
    "postinstall": "husky install",
    "lint": "eslint ./src --fix"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.43.0",
    "@graphprotocol/graph-ts": "^0.29.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "matchstick-as": "^0.5.2",
    "prettier": "^2.8.6"
  },
  "config": {
  "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/github"
    ]
  }
}
